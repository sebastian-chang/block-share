{{#each videoGames as |videoGame|}}
{{log videoGame.id}}
<section class='video-game-section card card-1 col-lg-3' id="{{videoGame.id}}" data-id="{{videoGame.id}}">
    <div class='card-info-hover'>
        {{#if videoGame.isAvailable}}
        <span class='card-like available'>
        {{else}}
        <span class='card-like not-available'>
        {{/if}}
        <i class="fas fa-eye"></i>
        </span>
    </div>
    <div class="card-img"></div>
    <a href="#" class="card-link">
        <div class="card-img-hover"></div>
    </a>
    <div class='class-info'>
        <h6 class='card-category'>Title</h6>
        <h3 class='card-title'>
            {{videoGame.title}}
        </h3>
        <h6 class='card-by'>Platform</h6>
        <p class='card-platform'>
            {{videoGame.console}}
        </p>
        <h6>Available:</h6>
        <p>
            {{#if videoGame.isAvailable}}
            green
            {{else}}
            red
            {{/if}}
        </p>
    </div>
</section>




<script>
    $('.video-game-section[data-id="{{videoGame.id}}"] + .card-1 .card-img, .card-1 .card-img-hover').css('background-image', 'url({{videoGame.poster}})')
</script>
{{/each}}

